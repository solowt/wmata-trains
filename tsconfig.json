{
  "compilerOptions": {
    "outDir": "dist",
    "experimentalDecorators": true,
  	"inlineSourceMap": false,
  	"jsx": "react",
    "jsxFactory": "tsx",
    "lib": ["dom", "es2015.promise", "es5"],
    "module": "amd",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitUseStrict": true,
    "noUnusedLocals": true,
    "removeComments": false,
    "skipLibCheck": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/**/*.*",
    "arcgis-js-api-4/**/*.*"
  ]
}